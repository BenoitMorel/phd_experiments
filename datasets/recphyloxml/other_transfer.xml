      <clade>
        <name>root</name>
        <eventsRec>
          <speciation speciesLocation="ABC"></speciation>
        </eventsRec>
        <clade>
          <name>event</name>
          <eventsRec>
          <branchingOut speciesLocation="C"></branchingOut>
          </eventsRec>
          <clade>
            <name>c1</name>
            <eventsRec>
              <leaf speciesLocation="C"></leaf>
            </eventsRec>
          </clade>
          <clade>
            <name>a2</name>
            <eventsRec>
              <transferBack destinationSpecies="A"></transferBack>
              <leaf speciesLocation="A"></leaf>
            </eventsRec>
          </clade>
        </clade>
        <clade>
          <name>AB</name>
          <eventsRec>
            <speciation speciesLocation="AB"></speciation>
          </eventsRec>
          <clade>
            <name>a1</name>
            <eventsRec>
              <leaf speciesLocation="A"></leaf>
            </eventsRec>
          </clade>
          <clade>
            <name>b1</name>
            <eventsRec>
              <leaf speciesLocation="B"></leaf>
            </eventsRec>
          </clade>
        </clade>
      </clade>
    </phylogeny>
  </recGeneTree>
</recPhylo>
