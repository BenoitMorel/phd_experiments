<recPhylo
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.recg.org ./recGeneTreeXML.xsd"
  xmlns="http://www.recg.org">
  <spTree>
    <phylogeny>
      <clade>
        <name>ABC</name>
        <clade>
          <name>AB</name>
          <clade>
            <name>A</name>
          </clade>
          <clade>
            <name>B</name>
          </clade>
        </clade>
        <clade>
          <name>C</name>
        </clade>
      </clade>
    </phylogeny>
  </spTree>
  <recGeneTree>
